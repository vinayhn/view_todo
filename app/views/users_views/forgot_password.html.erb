<h1>Change Password</h1>
<%= form_with url: change_password_path do |form| %>
    
    <div class="field">
        <%= form.label :email %>
        <%= form.text_field :email%>
    </div>

    <div class="field">
        <%= form.label :new_password %>
        <%= form.text_field :new_password %>
        
    </div>

    <div class="field">
        <%= form.label :confirm_password %>
        <%= form.text_field :confirm_password%>
    </div>

    <div class="actions">
        <%= form.submit 'Change Password' %>
    </div>

<% end %>
<%= link_to 'back',login_path  %>