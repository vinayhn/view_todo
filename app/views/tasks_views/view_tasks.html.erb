<h1>View Tasks</h1>
<br>
<%= button_to 'Logout', logout_path %>
<br><br>
<body>
<table id = "task_table">
  <thead>
    <tr>
      <th>Task id</th>
      <th>Title</th>
      <td></td>
      <th>Description</th>
      <td></td>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id = "task_table_body" >
   <% @tasks.each do |task| %> 
    <tr id = <%= task['id'] %>  >
      <td><%= task['id']%></td>
      <td><%= simple_format(word_wrap(task['task_title'], line_width: 20)) %></td>
      <td><b>-</b></td>
      <td><%= simple_format(word_wrap(task['description'], line_width: 35))  %></td>
      <td><b>-</b></td>
      <td><%= task['status'] %></td>
      <td><b>-</b</td>

      <td><%= link_to 'edit',edit_one_task_path(id: task["id"].to_i)%></td>
      <td><b>|</b></td>  
      <td>   <button onclick = "del_task(<%= task['id'] %>)" > Delete </button>  </td>
     
      <!--<td><%= link_to 'delete', id_path(id: task["id"].to_i)%></td> --->
      
        
    </tr>
   <% end %>  


  </tbody>
</table>
</body>


<% flash.each do |type, msg| %>
  <div>
  <b> <%= msg %> </b>
  </div>
<% end %>


